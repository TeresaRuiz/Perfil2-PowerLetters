-- Crear usuario
CREATE USER 'powerlettersAdmin'@'%' IDENTIFIED BY 'tienda123';

-- Asignar permisos
GRANT SELECT, INSERT, UPDATE, DELETE ON powerletters.* TO 'powerlettersAdmin'@'%';
